@model TelefonRehberi.Models.EntityFramework.Kullanıcı

@{
    ViewBag.Title = "PasswordEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 style="margin-top:5%;">Kullanıcı Bilgileri</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" for="disabledTextInput">Kullanıcı Adı</label>
            <div class="col-md-10 resetDiv">
                <input type="text" id="disabledTextInput" class="form-control" placeholder="@Model.kAdi" disabled>
                @Html.ValidationMessageFor(model => model.kAdi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="disabledTextInput">Kullanıcı Şifre</label>
            <div class="col-md-10 resetDiv" id="resetDiv">
                @Html.EditorFor(model => model.kSifre, new { htmlAttributes = new { @class = "form-control"} })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 resetDiv">
                <input type="submit" value="Kaydet" class="btn btn-success" />
            </div>
        </div>
    </div>
}

