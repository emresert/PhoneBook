@model TelefonRehberi.Models.Class.PersonelModel


@{
    ViewBag.Title = "PersonelDetay";
    Layout = "~/Views/Shared/_Layaout.cshtml";
}
<div class="row">
    <div class="panel panel-default mt-5">
        <div class="panel-heading" style="background-color:#428bca;color:white;"><center><h4>Personel Bilgisileri</h4></center> </div>
        <div class="panel-body">
            <div class="col-md-4 col-xs-12 col-sm-6 col-lg-4">
                <img alt="User Pic" src="https://x1.xingassets.com/assets/frontend_minified/img/users/nobody_m.original.jpg" id="profile-image1" class="img-circle img-responsive">
            </div>
            <div class="col-md-8 col-xs-12 col-sm-6 col-lg-8">
                <div class="container" style="color:black !important;width:100% !important">
                    <h3 style="">@Html.DisplayFor(model => model.pAd) @Html.DisplayFor(model => model.pSoyad)</h3>
                    <p style="color:darkgray!important;font-size:12px;"><b>@ViewBag.Departman</b></p>


                </div>
                <hr>
                <ul class="container details" style="list-style-type:none;width:100%;">
                    <li><p style="color:black !important;"><b>Yönetici Adı: </b>@Html.DisplayFor(model => model.yonetici) @ViewBag.Yonetici</p></li>
                    <li><p style="color:black !important;"><b>Telefon Numarası: </b>@Html.DisplayFor(model => model.pTelNo)</p></li>
                </ul>
                <hr>
                <div class="col-sm-5 col-xs-6 tital ">22 Mart 2019 tarihinde firmaya katıldı</div>
            </div>
        </div>
    </div>
</div>
